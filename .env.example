# Gemini API Key (required for translation)
GEMINI_API_KEY=your-gemini-api-key

# JWT Secret (required for auth)
JWT_SECRET=your-jwt-secret-change-this

# Default Host Account
HOST_EMAIL=admin@translachat.com
HOST_PASSWORD=changeme
HOST_NAME=Host

# OpenAI API Key (required for Whisper voice input)
OPENAI_API_KEY=your-openai-api-key

# Data Directory (optional, default: ./data)
DATA_DIR=./data

# CORS Allowed Origins (optional, comma-separated)
ALLOWED_ORIGINS=http://localhost:5173

# Port (optional, default: 3000)
PORT=3000
